{
  "name": "aspnet-buildtools",
  "version": "0.1.4",
  "description": "Utilities for integrating build tools in ASP.NET projects",
  "license": "MIT",
  "repository": "Baune8D/aspnet-buildtools",
  "author": "Morten Larsen",
  "homepage": "https://github.com/Baune8D/aspnet-buildtools",
  "bugs": "https://github.com/Baune8D/aspnet-buildtools/issues",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist/**/**",
    "!**/*.tsbuildinfo",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@jest/globals": "^30.0.5",
    "@types/node": "^22.13.14",
    "@types/webpack": "^5.28.5",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "ts-node": "^10.9.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{ts,mjs}\" && eslint --fix \"**/*.{ts,mjs}\"",
    "lint": "eslint \"**/*.{ts,mjs}\" --max-warnings=0 --report-unused-disable-directives",
    "test": "NODE_NO_WARNINGS=1 node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build": "rm -rf dist && tsc --project tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">= 20"
  }
}
